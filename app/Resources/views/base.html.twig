<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>
	{% block stylesheets %}{% endblock %}
	{% block head %}
	<link rel="stylesheet" href="{{ asset('public/css/bootstrap.min.css') }}" />
	<link rel="stylesheet" href="{{ asset('public/css/styles.css') }}" />
	{% endblock %}
  </head>
  <body>
    <div class="page-wrap">
		<div class="container-fluid">
			<!-- Dashboard page starts here -->
			<div class="dashboard-page">
				<div class="row">
					<div class="gq-dashboard-header">
						<div class="pull-left">
							<div class="gq-logo-dashboard"><img src="{{ asset('public/images/gq-logo-dashboard.png') }}" alt="GQ logo" /></div>
							<div class="gq-dashboard-nav">
								<div class="btn-group">
									<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
										<span class="gq-menu-icon"></span>
									</button>
									<ul class="dropdown-menu" role="menu">
										<li><a href="#">Action</a></li>
										<li><a href="#">Another action</a></li>
										<li><a href="#">Something else here</a></li>
										<li class="divider"></li>
										<li><a href="#">Separated link</a></li>
									</ul>
								</div>
							</div>
						</div>
						<div class="pull-right">
							<div class="user-status">
								<div class="notification-section"><span>12</span></div>
								<div class="user-icon"><img src="{{ asset('public/images/profile-img.png') }}" /></div>
								<div class="user-status-msg">Williams</div>
								<div class="user-status-select">
									<div class="btn-group">
									  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
										<span class="gq-down-icon"></span>
									  </button>
									  <ul class="dropdown-menu" role="menu">
										<li><a href="#">Action</a></li>
										<li><a href="#">Another action</a></li>
										<li><a href="#">Something else here</a></li>
										<li class="divider"></li>
										<li><a href="#">Separated link</a></li>
									  </ul>
									</div>
								</div>
							</div>
						</div>
						</div>
				</div>
				<div class="row">
					<div class="dashboard-bg">
						<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 gq-dashboard-left hidden-xs">
							<ul class="gq-dashboard-left-nav">
								<li><a href="#"><span class="gq-dashboard-icon"><img src="{{ asset('public/images/dashboard.png') }}" /></span>Dashboard</a></li>
								<li><a href="#"><span class="gq-courses-icon"><img src="{{ asset('public/images/courses.png') }}" /></span>Courses</a></li>
								<li><a href="#"><span class="gq-messages-icon"><img src="{{ asset('public/images/messages.png') }}" /></span>Messages</a></li>
								<li><a href="#"><span class="gq-evidence-icon"><img src="{{ asset('public/images/evidence.png') }}" /></span>Evidence Files</a></li>
							</ul>
						</div>
					{% block body %}
						 <div class="block">
							{% block content %}{% endblock %}
						</div>
					{% endblock %}
					</div>
				</div>
			</div>
			<!-- Dashboard page ends here -->
		</div>
	</div>
	{% block javascripts %}
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{ asset('public/js/bootstrap.min.js') }}"></script>
	{% endblock %}
  </body>
</html>