<!-- Modal -->
<div class="modal-pop link-evidence">
    <div class="modal fade add-evidence" id="add-evidence" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog add-evidence-modal">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div class="file_upload_block">
                        <div class="title_bar clearfix">
                            <span class="title"><i class="material-icons" data-dismiss="modal">arrow_back</i>Add Evidence</span>
                            <span class="done" data-dismiss="modal">DONE</span>
                        </div>
                        <div class="clearfix">
                            <div class="take_photo" id="take_photo">
                                <input type="file" id="take_photo_btn" onchange="upload('take_photo')" accept="image/*" capture="camera">
                                <span>
                                        <i class="material-icons">camera_alt</i>Take a photo
                                </span>
                            </div>
                            <div class="upload_btn">
                                <input type="hidden" name="file[hid_course]" id="hid_course" value="{{ courseCode }}">
                                <input type="hidden" name="file[hid_unit]" id="hid_unit" value="{{ unitCode }}">                                             
                                <input type="file" multiple="multiple" id="file" onchange="upload('add_file')" class="hidden">
                                <div class="button" id="add_file_txt"><i class="material-icons">add</i> Add a file</div>
                            </div>
                        </div>
                        <span class="file_size_limit">Maximum file size is 3.0 GB per upload</span>
                        <div class="panel-group hide" id="fileListContainer">
                            <div class="panel clearfix">
                                <div class="panel-body">
                                    <div class="panel-copy fileListContainer" id="progress-bars"></div>
                                </div>
                            </div>
                        </div>
                        <div id="select-from" class="tab-pane"></div>
                    </div>					
                </div>
            </div>
        </div>
    </div>
</div>