<div class="container container-two-column-split" ng-show="qualificationPage == 'elective'">
    
            <section class="section-main col-section-5" ng-init="courseCode='{{courseCode}}'">
                <div class="panel panel-default panel-units">
                    <div class="panel-body">
                        <div class="form-group unit-search">
                            <input type="text" class="form-control input-lg" onfocus="UNITS.display_search(this)" onblur="UNITS.hide_search(this)"placeholder="Type keywords here...">
                            <i class="zmdi zmdi-search zmdi-hc-2x icon"></i>
                        </div>

                        <h3>Select your Elective Units</h3>
                        <div class="list-group list-group-units panel-accordion">
                            <ul class="list-group-units-item" data-unit-group="E-Marketing" ng-repeat="electiveGroup in electiveUnits.groups"> 
                                <li class="list-group-units-subitem" ng-class="{'selected':isSelected}" ng-repeat="elective in electiveGroup.unit">
                                    <div class="btn-group">
                                        <button type="button" class="btn" aria-expanded="{[{showDetails}]}" ng-class="{'collapsed': ! showDetails }" ng-click="showDetails = ! showDetails">
                                            <span class="unit-name" ng-bind="elective.name"></span>
                                            <span class="unit-code" ng-bind="elective.id" ng-show="isSelected"></span>
                                            <i class="zmdi zmdi-chevron-down"></i>
                                        </button>
                                        <button type="button" class="btn"><i class="zmdi"></i></button>
                                    </div>
                                    <div class="panel-collapse collapse" ng-class="{'in': showDetails }"  ng-show="showDetails">
                                        <p ng-bind-html="elective.details.elements"></p> 
                                        <p ng-bind-html="elective.details.evidence_guide"></p> 
                                        <p ng-bind-html="elective.details.skills_and_knowledge"></p> 
                                    </div>
                                </li>
                                {#<li class="list-group-units-subitem">
                                    <div class="btn-group">
                                        <button type="button" class="btn" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                            <span>Basic Salt Sprinkling</span>
                                            <i class="zmdi zmdi-chevron-down"></i>
                                        </button>
                                        <button type="button" class="btn"><i class="zmdi"></i></button>
