<div class="container container-two-column-split" ng-show="qualificationPage == 'elective' && IsLoaded && (electiveUploadSelected === false)">
    
    <section class="section-main col-section-5" ng-init="courseCode='{{courseCode}}'">
        <div class="panel panel-default panel-units">
            <div class="panel-body">                                
                <h3><small>{{courseDetails.courseCode}}</small><br>{{ courseDetails.courseName }} </h3>
                <progress style="width: 100%" role="progress" value="{[{percentCoreSubmitted()}]}" max="100"><img class="fallback" width="30"></progress>
                <figcaption class="progress-details" data-value="{[{coreSubmmited}]}" data-unit="/{[{coredElectiveUnitsCount}]}"> </figcaption>
                <div class="list-group list-group-units panel-accordion" ng-class="{'disable-not-selected': selectedElectiveUnits.length == requiredElective}">
                    <ul class="list-group-units-item" ng-repeat="electiveGroup in electiveUnits.groups" data-unit-group="{[{electiveGroup.name || ''}]}"> 
                        <li class="list-group-units-subitem" ng-class="{'selected' : isSelected(elective)}" ng-repeat="elective in electiveGroup.unit | filter: elective_search">
                            <div class="btn-group">
                                <button type="button" class="btn" aria-expanded="{[{showDetails}]}" ng-class="{'collapsed': ! showDetails }" ng-click="getUnitDetails(elective.id); showDetails = ! showDetails" data-toggle="collapse">
                                    <span class="unit-name" ng-bind="(elective.id) +' - '+ (elective.name)"></span>
                                    <span class="unit-code" ng-bind="elective.id" ng-if="isSelected(elective)"></span>
                                    <i class="zmdi zmdi-chevron-down"></i>
                                </button>
                            </div>
                            <div class="panel-collapse collapse" ng-class="{'in': showDetails }"  ng-show="showDetails">
                                <div class="panel-body table-from-api content-from-api table-striped">
                                    <p ng-bind-html="unitDetails[elective.id].elements"></p> 
                                    <p ng-bind-html="unitDetails[elective.id].evidence_guide"></p> 
                                    <p ng-bind-html="unitDetails[elective.id].skills_and_knowledge"></p> 
                                </div>
                            </div>
                        </li>
                        {#<li class="list-group-units-subitem">
                            <div class="btn-group">
                                <button type="button" class="btn" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                    <span>Basic Salt Sprinkling</span>
                                    <i class="zmdi zmdi-chevron-down"></i>
                                </button>
                                <button type="button" class="btn"><i class="zmdi"></i></button>
                            </div>
                            <div id="collapse2" class="panel-collapse collapse">
