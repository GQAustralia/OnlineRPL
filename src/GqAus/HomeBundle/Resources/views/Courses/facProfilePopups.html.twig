    {% set userId = app.security.getToken().getUser().getId() %} 
<div class="modal fade profile_popup" id="facProfile" role="dialog">
    <div class="modal-dialog"><!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <span class="close" data-dismiss="modal"><i class="material-icons clear_icon">clear</i></span>
                <div class="title_bar hidden-sm hidden-md hidden-lg">
                    <span data-dismiss="modal"><i class="material-icons arrow_back">arrow_back</i></span>Facilitator Profile<span data-dismiss="modal"><i class="material-icons clear_icon">clear</i></span>
                </div>
                <div class="header_block clearfix">
                    <div class="profile_section">
                    	{% if courses.Facilitator.id is defined %}
                        <img class="no_upload" alt="profile_pic" src="{{amazon_link~'user-'~courses.Facilitator.id~'/'~courses.Facilitator.userImage}}">
                        {% endif %}
                        <input type="file" class="hidden browse_btn">
                        <div class="content">
                             {% if courses.facilitator.firstName is defined %}
                                <h5 class="name"><strong>{{courses.facilitator.firstName}} {{courses.facilitator.lastName}}</strong></h5>
                               {% endif %}
                                <span class="field"> Facilitator</span>
                        </div>
                    </div>
                    {#<div class="count">
                       {% set facApplicantsCount = user_service.getPendingApplicantsCount(courses.facilitator.id, 'ROLE_FACILITATOR', '0') %}                       
                            <span class="number"><strong>{{facApplicantsCount}}</strong></span>
                            <span class="title">Active Portfolios</span>
                    </div>#}
                </div>
                <div class="form">
                        <div class="section name_group clearfix">
                        	{% if courses.facilitator.firstName is defined %}
                                <div class="form-group"><label>First Name</label><input type="text" readonly="" value="{{courses.facilitator.firstName}}"></div>
                             {% endif %}
                             {% if courses.facilitator.lastName is defined %}
                                <div class="form-group"><label>Last Name</label><input type="text" readonly="" value="{{courses.facilitator.lastName}}"></div>
                                {% endif %}
                        </div>
                        <div class="section">
                        {% if courses.facilitator.Email is defined %}
                                <div class="form-group"><label>Email</label><input type="email" readonly="" value="{{courses.facilitator.Email}}"></div>
                         {% endif %}
                        </div>
                        <div class="section number_group clearfix">
                        {% if courses.facilitator.Phone is defined %}
                                <div class="form-group"><label>Mobile</label><input type="text" readonly="" value="{{courses.facilitator.Phone}}"></div>
                         {% endif %}
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>