{% set reminderType = 'message' %}
<div class="accordian_block">
    <div class="title_bar clearfix status_msg">
        <span class="title">
            <a href="{{ app.request.baseUrl }}/messages" title="View Pending Evidences">
                MESSAGES - 
                <strong>{{unReadMessagesCount}} UNREAD</strong>
                {% if(unReadMessagesCount == 0) %}
                     SUPER STAR!! <i class="material-icons">thumb_up thumb_up</i>
                {% endif %}                
            </a>
        </span>
        <span class="add_btn"><a href="{{ app.request.baseUrl }}/messages/compose" title="Add New Message"> <i class="material-icons add_icon">add</i>NEW</a></span>
    </div>
    <div class="panel-group" id="accordion2">
        {% if appMsg %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <span>{{appMsg|length}} new from Candidates</span>
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#m_collapse1">
                          <i class="material-icons keyboard_arrow_down">keyboard_arrow_down</i>
                        </a>
                    </div>
                </div>
                <div id="m_collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            {% for key, appliMsg in appMsg %}
                                {% set remStatus = user_service.checkReminderExists(appliMsg.inbox.id, appliMsg.id, reminderType) %}
                                <li class="clearfix {{ remStatus.playlistIconClass }}">
                                    <span class="content"><strong><a href="{{ app.request.baseUrl }}/messages/{{ appliMsg.id }}" title="View Message">{{ appliMsg.sent.firstName}} {{ appliMsg.sent.lastName}}</a></strong> - {{appliMsg.subject}} </span>
                                    <div class="dropdown keep-open">
                                         <span class="dropdown-toggle" data-toggle="dropdown"><i class="material-icons">{{ remStatus.playlistIcon }}</i></span>
                                         <div class="dropdown-menu {{ remStatus.calendarClass }}">
                                             <div class="data_section">
                                                 <textarea rows="3" placeholder="Notes" id="appMsg_notes_{{appliMsg.id}}" onfocus="fousOnNote({{appliMsg.id}})"></textarea>
                                                 <div class="date_section clearfix">
                                                         <input type="text" class="date_field form-control" id="appMsg_remindDate_{{appliMsg.id}}" onfocus="fousOnDate({{appliMsg.id}})" readonly />
                                                 </div>
                                             </div>
                                             <button type="button" class="btn_red setData" userCourseId="" prefix="appMsg" listId="{{appliMsg.id}}" reminderType="{{reminderType}}" reminderTypeId="{{appliMsg.id}}">Save</button>
                                         </div>
                                    </div>
                                </li>
                            {% endfor %} 
                        </ul>
                    </div>
                </div>
            </div>
        {% endif %}          
        {% if facMsg %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <span>{{facMsg|length}} new from Facilitators</span>
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#m_collapse1">
                          <i class="material-icons keyboard_arrow_down">keyboard_arrow_down</i>
                        </a>
                    </div>
                </div>
                <div id="m_collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            {% for key, faciMsg in facMsg %}
                                    {% set remStatus = user_service.checkReminderExists(faciMsg.inbox.id, faciMsg.id, reminderType) %}
                                    <li class="clearfix {{ remStatus.playlistIconClass }}">
                                            <span class="content"><strong><a href="{{ app.request.baseUrl }}/messages/{{ faciMsg.id }}" title="View Message">{{ faciMsg.sent.firstName}} {{ faciMsg.sent.lastName}}</a></strong> - {{faciMsg.subject}} </span>
                                            <div class="dropdown keep-open">
                                                {% if (('ROLE_FACILITATOR' in roles) or ('ROLE_ASSESSOR' in roles)) %}
                                                 <span class="dropdown-toggle" data-toggle="dropdown"><i class="material-icons">{{ remStatus.playlistIcon }}</i></span>
                                                {% endif %}
                                                 <div class="dropdown-menu {{ remStatus.calendarClass }}">
                                                    <div class="data_section">
                                                        <textarea rows="3" placeholder="Notes" id="facMsg_notes_{{faciMsg.id}}" onfocus="fousOnNote({{faciMsg.id}})"></textarea>
                                                        <div class="date_section clearfix">
                                                           <input type="text" class="date_field form-control" id="facMsg_remindDate_{{faciMsg.id}}" onfocus="fousOnDate({{faciMsg.id}})" readonly />
                                                        </div>
                                                    </div>                                                                                   
                                                    <button type="button" class="btn_red setData" userCourseId="" prefix="facMsg"  listId="{{faciMsg.id}}" reminderType="{{reminderType}}" reminderTypeId="{{faciMsg.id}}">Save</button>
                                                 </div>
                                            </div>
                                    </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endif %} 
        {% if assMsg %}
