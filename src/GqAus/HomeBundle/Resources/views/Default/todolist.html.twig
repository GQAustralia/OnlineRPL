{% set roles = app.security.getToken().getUser().getRoles() %}
<div class="to_do_list">
	<div class="panel-group" id="accordion1">
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title">
					<span>TO DO LIST</span>
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse1">
					  <i class="material-icons keyboard_arrow_down hidden-lg">keyboard_arrow_down</i>
					</a>
				</div>
			</div>
			<div id="collapse1" class="panel-collapse collapse in">
				<div class="panel-body">
					<div class="progres_bar_sec">
						<p class="title">To Do Today - <span class="todo-percent"> {{ percentage|number_format(0) }}</span>% Complete</p>
						<div class="progress">
							<div class="progress-bar" role="progressbar" data-citem="{{ completedRemindersCount }}" data-titem="{{ totalRemindersCount }}" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width:{{percentage|number_format(0)}}%">
							  <span class="sr-only">30% Complete</span>
							</div>
						</div>
					</div>
					<ul  class="todo-list">
						{% if todoReminders|length > 0 %}
							{% for  key, todoList in todoReminders %}
                                                        {% set startDate = todoList.date|date('Y-m-d') %}
                                                        {% set difference = date( 'now' | date() ).diff(date(startDate)) %}
                                                        {% set daycount = difference.days %}
                                                        {% set counterClass = (daycount<=3)? 'disable_day': ((daycount<=5)? 'active_day': 'highlight_day') %}
							<li class="list_item clearfix">
								<span class="list_icon">
									<i class="material-icons message">message</i>
								</span>
								<span class="content bold">{{ todoList.message}}</span>
                                                               {% if daycount > 2 %}
                                                                    <span class="days_count {{counterClass}}">{{daycount}}d{% if daycount > 6 %}!{% endif %}</span>
                                                               {% endif %}
								<div class="checkbox_outer">
									<input type="checkbox" class="updateTodo" id="{{ todoList.id }}" data-status="0" /><span></span>
								</div>
							</li>
							{% endfor %}
						{% else %}
							<li class="disable">
								<div class="li_content">
									<div class="left_side_data">
										<p class="title_data"></p>
									</div>
								</div>
								<div class="clearfix"></div>
							</li>
						{% endif %}
					</ul>
					<div>
						<span class="day_title">Completed Today</span>
					</div>
					<ul class="completed-list">
						{% if completedReminders|length > 0 %}
							{% for  key, todoCompleteList in completedReminders %}					
								<li class="list_item clearfix disable">
									<span class="list_icon">
										<i class="material-icons message">message</i>
									</span>
									<span class="content">{{ todoCompleteList.message }}</span>
									<div class="checkbox_outer">
										<input type="checkbox" id="{{ todoCompleteList.id }}" checked disabled="disabled" /><span></span>
									</div>
								</li>
							{% endfor %}
						{% else %}
							<li class="disable">
								<div class="li_content">
									<div class="left_side_data">
										<p class="title_data">No Completed Todo List found</p>
									</div>
								</div>
								<div class="clearfix"></div>
							</li>                                                                                    
						{% endif %}
					</ul>					
					<ul class="navigation_link_section">
						<li>
							<a href="javascript:void(0)" class="icon">
								<strong>Add New</strong>
							</a>
						</li>
						<li>
							<a href="javascript:void(0)" class="icon">
								<i class="material-icons message">message</i>
								<span>Message</span>
							</a>
						</li>
						<li>
							<a href="javascript:void(0)" class="icon">
								<i class="material-icons account_circle">account_circle</i>
								<span>Portfolio</span>
							</a>
						</li>
						<li>
							<a href="javascript:void(0)" class="icon">
								<i class="material-icons cloud_upload">cloud_upload</i> <span>Evidence</span>
							</a>
						</li>
						<li>
							<a href="javascript:void(0)" class="icon">
								<i class="material-icons edit">edit</i>
								<span>Note</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>