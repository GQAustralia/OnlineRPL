<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="GqAus\UserBundle\Entity\Message" table="message">
        <id name="id" type="string" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="subject" type="string" column="subject" nullable="false"/>
        <field name="message" type="string" column="message" nullable="false"/>
        <field name="created" type="string" column="created" nullable="false"/>
        <field name="read" type="string" column="read_status" length="1" nullable="false"/>
        <field name="toStatus" type="string" column="to_status" length="1" nullable="false"/>
        <field name="fromStatus" type="string" column="from_status" length="1" nullable="false"/>
        <field name="reply" type="string" column="reply" length="1" nullable="false"/>
		<field name="replymid" type="integer" column="replymid" length="10" nullable="false"/>
        <many-to-one field="inbox" target-entity="GqAus\UserBundle\Entity\User" inversed-by="inboxMessages">
            <join-column name="to_user" referenced-column-name="id" />
        </many-to-one>       
        <many-to-one field="sent" target-entity="GqAus\UserBundle\Entity\User" inversed-by="sentMessages">
            <join-column name="from_user" referenced-column-name="id" />
        </many-to-one>
        <field name="unitID" type="integer" column="unit_id" nullable="true"/>
        
        <field name="flagged" type="string" column="is_flagged" length="1" nullable="false"/>
        <field name="courseCode" type="string" column="course_code" nullable="false"/>
        <field name="new" type="string" column="is_new" length="1" nullable="false"/>
        <field name="systemGenerated" type="string" column="is_system_gen" length="1" nullable="false"/>
        <field name="draft" type="string" column="is_draft" length="1" nullable="false"/>
        
    </entity>
</doctrine-mapping>