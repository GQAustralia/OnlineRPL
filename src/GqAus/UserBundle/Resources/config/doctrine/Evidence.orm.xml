<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="GqAus\UserBundle\Entity\Evidence" table="evidence" inheritance-type="JOINED">
  
         <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
       <discriminator-column name="type" type="string" />
        <discriminator-map>
            <discriminator-mapping value="image" class="GqAus\UserBundle\Entity\Evidence\Image"/>
            <discriminator-mapping value="video" class="GqAus\UserBundle\Entity\Evidence\Video"/>
            <discriminator-mapping value="audio" class="GqAus\UserBundle\Entity\Evidence\Audio"/>
            <discriminator-mapping value="text" class="GqAus\UserBundle\Entity\Evidence\Text"/>
            <discriminator-mapping value="file" class="GqAus\UserBundle\Entity\Evidence\File"/>
            <discriminator-mapping value="recording" class="GqAus\UserBundle\Entity\Evidence\Recording"/>
        </discriminator-map>
        <field name="unit" type="string" column="unit_code" null="true"/>
        <field name="course" type="string" column="course_code" null="true"/>
        <field name="size" type="string" column="size"/>
        <many-to-one field="user" target-entity="GqAus\UserBundle\Entity\User" mapped-by="evidences">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>   
        <field name="created" type="string" column="created"/>
    </entity>
</doctrine-mapping>