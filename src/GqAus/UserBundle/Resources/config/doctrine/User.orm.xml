<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="GqAus\UserBundle\Entity\User" table="user" inheritance-type="SINGLE_TABLE" >
  
        <id name="id" type="string" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="firstName" type="string" column="first_name" nullable="false"/>
        <field name="lastName" type="string" column="last_name" nullable="false"/>
        <field name="email" type="string" column="email" length="128" nullable="false"/>
        <field name="phone" type="string" column="phone" length="128" nullable="false"/>
        <field name="password" type="string" column="password" length="128" nullable="false"/>
        
        <discriminator-column name="role_type" type="integer" />
        <discriminator-map>
            <discriminator-mapping value="1" class="GqAus\UserBundle\Entity\Applicant" />
            <discriminator-mapping value="2" class="GqAus\UserBundle\Entity\Facilitator" />
            <discriminator-mapping value="3" class="GqAus\UserBundle\Entity\Assessor" />
            <discriminator-mapping value="4" class="GqAus\UserBundle\Entity\Rto" />
            <discriminator-mapping value="5" class="GqAus\UserBundle\Entity\Manager" />
            <discriminator-mapping value="6" class="GqAus\UserBundle\Entity\Superadmin" />
        </discriminator-map>
       
        <one-to-many field="courses" target-entity="GqAus\UserBundle\Entity\UserCourses" mapped-by="user">
        	<order-by>
                <order-by-field name="id" direction="DESC" />
            </order-by>
        </one-to-many>
<!--        <one-to-one field="address" target-entity="GqAus\UserBundle\Entity\UserAddress" inversed-by="user">
            <join-columns>
                <join-column name="address" referenced-column-name="id"/>
            </join-columns>
            <order-by>
                <order-by-field name="id" direction="DESC" />
            </order-by>
        </one-to-one>-->
        <one-to-one field="address" target-entity="GqAus\UserBundle\Entity\UserAddress" mapped-by="user" />
        <field name="userImage" type="string" column="user_img" length="255" nullable="true"/>
        <field name="passwordToken" type="string" column="password_token" length="255"/>
        <field name="tokenExpiry" type="string" column="token_expiry" />
        <field name="tokenStatus" type="integer" column="token_status" length="1"/>
        <field name="courseConditionStatus" type="integer" column="course_condition_status" length="1"/>
        <field name="dateOfBirth" type="string" column="date_of_birth" length="20" nullable="true"/>
        <field name="gender" type="string" column="gender" length="1"/>
        <field name="universalStudentIdentifier" type="string" column="universal_student_identifier" length="100"/>
        <field name="contactName" type="string" column="contact_name" nullable="true"/>
        <field name="contactEmail" type="string" column="contact_email" nullable="true"/>
        <field name="contactPhone" type="string" column="contact_phone" nullable="true"/>
        <field name="ceoname" type="string" column="ceo_name" nullable="true"/>
        <field name="ceoemail" type="string" column="ceo_email" nullable="true"/>
        <field name="ceophone" type="string" column="ceo_phone" nullable="true"/>
        <field name="createdby" type="integer" column="created_by" length="11" nullable="true"/>
        <field name="status" type="integer" column="status" length="1" nullable="false" />
        <field name="crmId" type="string" column="crm_id" nullable="true"/>
        <field name="applicantStatus" type="integer" column="applicantStatus" length="1" nullable="false"/>
        <field name="loginToken" type="string" column="login_token"/>
        <field name="curinAustralia" type="integer" column="curr_australia" length="1" nullable="true"/>
        <field name="interStudentvet" type="integer" column="inter_student_VET" length="1" nullable="true"/>
        <field name="exemStudidentreg" type="integer" column="exemption_sir" length="1" nullable="true"/>
        <field name="applyForyourusi" type="integer" column="like_apply_usi" length="1" nullable="true"/>
        <one-to-many field="idfiles" target-entity="GqAus\UserBundle\Entity\UserIds" mapped-by="user" />        
        <one-to-many field="evidences" target-entity="GqAus\UserBundle\Entity\Evidence" mapped-by="user" >
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="DESC" />
            </order-by>            
        </one-to-many>
        <one-to-many field="reminders" target-entity="GqAus\UserBundle\Entity\Reminder" mapped-by="user" />
        <one-to-many field="otherfiles" target-entity="GqAus\UserBundle\Entity\OtherFiles" mapped-by="assessor" />
        <one-to-many field="inboxMessages" target-entity="GqAus\UserBundle\Entity\Message" mapped-by="inbox" />        
        <one-to-many field="sentMessages" target-entity="GqAus\UserBundle\Entity\Message" mapped-by="sent" />
    </entity>
</doctrine-mapping>