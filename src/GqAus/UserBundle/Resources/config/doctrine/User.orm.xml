<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="GqAus\UserBundle\Entity\User" table="user" inheritance-type="SINGLE_TABLE" >
  
        <id name="id" type="string" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="firstName" type="string" column="firstname" nullable="false"/>
        <field name="lastName" type="string" column="lastname" nullable="false"/>
        <field name="email" type="string" column="email" length="128" nullable="false"/>
        <field name="phone" type="string" column="phone" length="128" nullable="false"/>
        <field name="password" type="string" column="password" length="128" nullable="false"/>
        <discriminator-column name="roletype" type="integer" />
        <discriminator-map>
            <discriminator-mapping value="1" class="GqAus\UserBundle\Entity\Applicant" />
            <discriminator-mapping value="2" class="GqAus\UserBundle\Entity\Facilitator" />
            <discriminator-mapping value="3" class="GqAus\UserBundle\Entity\Assessor" />
        </discriminator-map>
       
        <one-to-many field="courses" target-entity="GqAus\UserBundle\Entity\UserCourses" mapped-by="user" />
        <one-to-one field="address" target-entity="GqAus\UserBundle\Entity\UserAddress" mapped-by="user" />
        <field name="userImage" type="string" column="user_img" length="255"/>
        <field name="passwordToken" type="string" column="passwordToken" length="255"/>
        <field name="tokenExpiry" type="string" column="tokenExpiry" />
        <field name="tokenStatus" type="integer" column="tokenStatus" length="1"/>
    </entity>
</doctrine-mapping>