<div class="text-center gq-id-files-button-content-wrap" id="applicantEStatus" userRole="{{currentUserRole.0}}">

    {% if unitStatus.facilitatorstatus == '2' %}
    <div>Account Manager marked it as unacceptable!</div>
    {% endif %}            
    {% if unitStatus.assessorstatus == '2' %}
    <div>Assessor marked it as unacceptable!</div>
    {% endif %}         
    {% if unitStatus.rtostatus == '2' %}
    <div>RTO marked it as unacceptable!</div>
    {% endif %}
{% if unitStatus.rtostatus == '0' %}
    <form action="{{ base_url }}compose" method="post" name="composeevform">
        {% if ('ROLE_FACILITATOR' in currentUserRole) %}
            {% set app_btn_name = 'Satisfactory' %}
            {% set disapp_btn_name = 'Not Yet Satisfactory' %}            
        {% endif %}
        {% if ('ROLE_ASSESSOR' in currentUserRole) %}
            {% set app_btn_name = 'Competent' %}
            {% set disapp_btn_name = 'Not Yet Competent' %}
        {% endif %}
        {% if ('ROLE_RTO' in currentUserRole) %}
            {% set app_btn_name = 'Approve' %}
            {% set disapp_btn_name = 'Disapprove' %}
        {% endif %}
        <span id="gq-msg-success" class="btn-wrap100p">
        {% if ((unitStatus.facilitatorstatus == '1') and ('ROLE_FACILITATOR' in currentUserRole)) or ((unitStatus.assessorstatus == '1') and ('ROLE_ASSESSOR' in currentUserRole)) or ((unitStatus.assessorstatus == '1') and (unitStatus.rtostatus == '1') and ('ROLE_RTO' in currentUserRole)) %}
{#            <div>You have Approved this Evidence!</div>#}
        {% else %}
            {% if ('ROLE_RTO' in currentUserRole and unitStatus.assessorstatus == '1')  or ('ROLE_FACILITATOR' in currentUserRole and unitStatus.facilitatorstatus == '0' and unitStatus.assessorstatus == '0') or ('ROLE_ASSESSOR' in currentUserRole  and unitStatus.assessorstatus == '0') %}
