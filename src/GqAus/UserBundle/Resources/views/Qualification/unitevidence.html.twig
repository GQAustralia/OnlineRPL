<div class="wid90p">
    <div class="row">
        <div id="evidence_msg"></div>
        <div class="col-xs-12">
        <div class="gq-evidence-new">
            <!-- Tabs start here -->
                <ul class="nav nav-pills margin-top15 gq-evidence-new-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active" ><a href="#unit-images" aria-controls="unit-images" role="tab" data-toggle="tab">Images</a></li>
                    <li role="presentation" ><a href="#unit-audios" aria-controls="unit-audios" role="tab" data-toggle="tab">Audios</a></li>
                    <li role="presentation"><a href="#unit-videos" aria-controls="unit-videos" role="tab" data-toggle="tab">Videos</a></li>
                    <li role="presentation"><a href="#unit-notes" aria-controls="unit-notes" role="tab" data-toggle="tab">Notes</a></li>
                    <li role="presentation"><a href="#unit-files" aria-controls="unit-files" role="tab" data-toggle="tab">Documents</a></li>
                </ul>
            <!-- Tabs end start here -->
            {% set currentUserRole = app.security.getToken().getUser().getRoles() %}
            <!-- Content for respective tabs above will be in this section -->
        <div class="tab-content">
        <div aria-labelledby="existing-evidence-tab" id="unit-images" class="tab-pane fade active in" role="tabpanel">
            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                <div class="row">
                    {% set flag_image = 0 %}
                    {% if unitevidences %}
                    {% for evidence in unitevidences %}
                    {% if evidence.unit == unitCode %}
                    {% if evidence.type == 'image' %}
                    {% set flag_image = 1 %}
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3" id="evd_{{evidence.id}}">
                    <div class="gq-dashboard-courses-detail  margin-top15" >
                        {% if ('ROLE_APPLICANT' in currentUserRole) and (delStatus == '0') %}
                        <span class="gq-dashboard-points-icon">
                            <a class="modalClass viewModalClass" data-toggle="modal" data-target="#myModalDel" fileid="{{evidence.id}}" filetype="{{evidence.type}}"><div class="gq-del-evidence"></div></a>
                            <div class="tooltip-home top">
                                <div class="tooltip-arrow"></div>
                                <span>Delete Image</span>
                            </div>
                        </span>
                        {% endif %}
                        <a href = "{{ amazon_link }}{{  evidence.path }}" class="fancybox">        
                            <div class="gq-id-files-content-icon-wrap gq-id-files-content-img-icon"></div>
                        </a>
                        <div class="gq-id-files-content-row-wrap">
                            <div class="gq-id-files-content-row">
                                <label>Title</label><span title="{{evidence.title}}">{{evidence.title|slice(0, 20)}}</span>
                            </div>
                            <div class="gq-id-files-content-row">
                                <label>Size</label><span>{{evidence.size}}</span>
                            </div>
                            <div class="gq-id-files-content-row">
                                <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endif %}
             {% endfor %}
             {% endif %}
             {% if flag_image == 0 %}
                <div class="gq-tabs-no-content-text" >Images not found</div>
            {% endif %}
                </div>
            </div>
        </div>
                              
