            <button type="button" id="disapprove" class="btn btn-red">{{ disapp_btn_name }}</button>
            {% endif %}
                {% else %}
            <button type="button" id="approve" disabled class="btn btn-green">{{ app_btn_name }}</button>
            {% if ('ROLE_RTO' not in currentUserRole) %}
            <button type="button" id="disapprove" disabled class="btn btn-red">{{ disapp_btn_name }}</button>
             {% endif %}
                {% endif %}
            <input type="hidden" name="hid-course-name" id="hid-course-name" value="{{course_name}}">
