            {% endif %}
            {% if ('ROLE_ASSESSOR' in currentUserRole and unitStatus.assessorstatus == '0') or ('ROLE_FACILITATOR' in currentUserRole and unitStatus.facilitatorstatus == '0' and unitStatus.assessorstatus == '0' and (courseAssessor is defined and courseAssessor is not null) ) %}    
                {% set role_user = ('ROLE_FACILITATOR' in currentUserRole) ? 'Assessor' : 'Account Manager' %}
