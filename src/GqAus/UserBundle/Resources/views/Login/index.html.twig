{% extends 'main.html.twig' %}
{% block title %}GQ - RPL Login {% endblock %}
{% block content %}
   <div class="row text-center">
        <h3>Sign in to get in touch</h3>
    </div>
    <div class="row">    
        <div class="gq-well gq-id-files-upload-success-text" style="display:none">
            <div class="gq-well well">
                <span class="login-warning-icon" aria-hidden="true"></span>
                <div class="login-warning-text"></div>
            </div>
        </div>        
        
        <form action="{{ path('login_check') }}" name="frmLogin" id="frmLogin" method="post">
          <div class="form-group">
            <input type="email" name = '_username' class="form-control email" id="InputEmail1" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name='_password' class="form-control password" id="InputPassword1" placeholder="Password">
          </div>
           <input type="hidden" name="_target_path" value="/dashboard" />
          <button type="submit" class="btn btn-red margin-top15" onclick="return loginValidate();">Log in</button>
        </form>
    </div>
    <div class="row text-center">
        <h4><a href="forgotpassword" >Forgot Password?</a></h4>
    </div>
{% endblock %}

{% block javascripts %}
     <script>
        $(document).ready(function() {
            $(".gq-id-files-upload-success-text").delay(3000).fadeOut(100);
        });
        
        /*Login Validation*/
        function loginValidate()
        {
            var useremail = $("#InputEmail1").val();
            var userpwd = $("#InputPassword1").val();
            regexp=/^[a-zA-Z0-9][\w\.-]*[a-zA-Z0-9]@[a-zA-Z0-9][\w\.-]*[a-zA-Z0-9]\.[a-zA-Z][a-zA-Z\.]*[a-zA-Z]$/;
            if(useremail=="") {
                $('.gq-well').show();
                $(".login-warning-text").show();
                $('.gq-well').show().delay(3000).fadeOut(100);
                $(".login-warning-text").html('<div for="InputEmail1" generated="true" class="error">Please enter Email</div>').delay(3000).fadeOut(100);
                return false;
            }
            else {
                if(useremail.search(regexp)==-1) {
                    $('.gq-well').show();
                    $(".login-warning-text").show();
                    $('.gq-well').show().delay(3000).fadeOut(100);
                    $(".login-warning-text").html('<div for="InputEmail1" generated="true" class="error">Please enter valid Email</div>').delay(3000).fadeOut(100);
                    return false;
                }
            }
            if(userpwd=="") {
                $('.gq-well').show();
                $(".login-warning-text").show();
                $('.gq-well').show().delay(3000).fadeOut(100);
                $(".login-warning-text").html('<div for="InputEmail1" generated="true" class="error">Please enter Password</div>').delay(3000).fadeOut(100);
                return false;
            }
         }
        /*End Login Validation*/
    </script>
    {% if error %}
        <script>
            $('.gq-well').show();
            $('.login-warning-text').html("Invalid credentials");
        </script>
    {% endif %}
{% endblock %}