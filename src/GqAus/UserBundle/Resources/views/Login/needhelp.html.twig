<script>
    function forgotValidate()
    {
        var useremail = $("#InputEmail1").val();
        var startdiv = '<div class="gq-id-files-upload-error-text alert alert-danger">';
        var enddiv = '</div>';
        regexp=/^[a-zA-Z0-9][\w\.-]*[a-zA-Z0-9]@[a-zA-Z0-9][\w\.-]*[a-zA-Z0-9]\.[a-zA-Z][a-zA-Z\.]*[a-zA-Z]$/;
        if(useremail=="") {
            $("#change_pwd_error").show();
            $("#change_pwd_error").html(startdiv + "Please enter Email" + enddiv);
            $("#InputEmail1").focus();    
            return false;
        }
        else {
            if(useremail.search(regexp)==-1) {
                $("#change_pwd_error").show();
                $("#change_pwd_error").html(startdiv + "Please enter valid Email" + enddiv);
                $("#InputEmail1").val('');
                $("#InputEmail1").focus();
                return false;
            }
        }
        data = {'email': useremail };
        $.ajax({
          type: "POST",
          url: 'forgotpassword',
          data: data,
          success: function(data){
               console.log(data);
               if (data.msg == '0') {      
                        $("#change_pwd_error").show();
                        $("#change_pwd_error").html('<div class="gq-id-files-upload-error-text alert alert-danger">There is no user with this email address. Please try again</div>');
               }
               else if (data.msg == '1'){
                        $("#change_pwd_error").show();
                        $("#change_pwd_error").html('<div class="gq-id-files-upload-success-text alert alert-success">A request for password reset is sent to this address.</div>');
               }
               return false;
          },
          dataType: 'json'
        });
        
        return false;
     }
</script>