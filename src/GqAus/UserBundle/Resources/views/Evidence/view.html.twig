{% extends 'base.html.twig' %}
{% block title %}GQ - RPL Evidences{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('public/css/pages/all/evidence.css') }}">
{% endblock %}
{% block body %}
{% set roles = app.security.getToken().getUser().getRoles() %}
    <div class="body_section">	<div class="body_section facilitator">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 hidden-sm hidden-md hidden-lg">
					<div class="file_upload_block">
						<div class="title_bar clearfix">
							<span class="title">UPLOAD EVIDENCE FILES</span>
						</div>
						<div class="upload_btn">
							<input type="file" class="hidden uploadFile"/>
							<div class="button uploadTrigger">Add a file</div>
						</div>
						<span class="file_size_limit">Maximum file size is 3.0 GB per upload</span>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
					<div class="evidence_block">
						<div class="title_bar clearfix">
							<span class="title">EVIDENCE <strong>({{ evidences|length }} TO REVIEW)</strong></span>
							<span class="info_btn">
								<i class="material-icons info_icon">info</i>
							</span>
						</div>


						<div class="tab_section clearfix">
							<div class="tab clearfix">
								<span class="search_icon"><i class="material-icons">search</i></span>
								<input type="text" class="search" value="Search"/>
							</div>
							<div class="tab">
								<span class="filter">
									<i class="material-icons">filter_list</i>Filter
								</span>
							</div>
							<div class="tab hidden-sm hidden-md hidden-lg">
								<span class="sort">
									<i class="material-icons">code</i>Sort
								</span>
							</div>
						</div>
						<div class="titles_block hidden-xs">
							<ul class="clearfix">
								<li style="width:15%;">
									<span>Type</span>
								</li>
								<li style="width:35%;">
									<span class="file_name">File Name</span>
								</li>
								<li style="width:20%;">
									<span>File Size</span>
								</li>
								<li style="width:30%;">
									<span class="date_section">
										<i class="material-icons">arrow_downward</i><strong>Date Added</strong>
									</span>
								</li>
							</ul>
						</div>
						<div class="file_info_block">
                                                {% for eKey, evd in evidences %}
                                                    {% if evd.type !='text' %}
                                                        {% if evd.name %} 
                                                            <div class="block">
                                                                    <p class="name"><strong>{{ evd.user.firstName }} {{ evd.user.lastName }}</strong></p>
                                                                    <div class="file_info hidden-xs">
                                                                            <span class="icon">
                                                                                    <i class="material-icons">description</i>
                                                                            </span>
                                                                            <span class="file_name">
                                                                                    {{ evd.name }}
                                                                            </span>
                                                                            <span class="file_size">
                                                                                    {{ evd.size }}
                                                                            </span>
                                                                            <span class="clear">
                                                                                   ADDED {{ evd.created|date("d/m/y") }}
                                                                            </span>
                                                                    </div>
                                                                    <div class="files_mobile_version hidden-sm hidden-md hidden-lg">
                                                                            <div class="file_info">
                                                                                    <span class="icon">
                                                                                            <i class="material-icons">description</i>
                                                                                    </span>
                                                                                    <span class="file-discription">
                                                                                            {{ evd.name }} <br> {{ evd.size }} | Added {{ evd.created|date("d/m/y") }}
                                                                                    </span>
                                                                            </div>
                                                                    </div>
                                                                    <div class="link_section">
                                                                            <span class="content">
                                                                                    <i class="material-icons">insert_link</i>Linked to {{ evd.unit }} (core unit)
                                                                                    <span class="clear_icon"><i class="material-icons">clear</i></span>
                                                                            </span>
                                                                    </div>
                                                            </div>                                                    
                                                        {% endif %}
                                                    {%endif%}
                                                {% endfor %}
						</div>
					</div>
				</div>
				<div class="hidden-xs col-sm-12 col-md-12 col-lg-6">
					<div class="file_upload_block">
						<div class="title_bar clearfix">
							<span class="title">UPLOAD EVIDENCE FILES</span>
						</div>
						<div class="upload_btn">
							<input type="file" class="hidden uploadFile"/>
							<div class="button uploadTrigger">Add a file</div>
						</div>
						<span class="file_size_limit">Maximum file size is 3.0 GB per upload</span>
					</div>
				</div>
				<div class="col-xs-12 hidden-sm hidden-md hidden-lg">
					<div class="profile_section hidden-sm hidden-md hidden-lg">
						<div class="container">
							<img alt="profile_pic" src="../images/UPLOAD_PROFILE_PHOTO.png">
							<span>Samantha</span>
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}