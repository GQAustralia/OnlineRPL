{% extends 'revamp_base.html.twig' %}
{% block ngApp %} ng-app="gqAus" {% endblock%}
{% block ngController %} ng-controller="profileCtlr"  id="profileCtlr" {% endblock%}
{% block title %}  My Profile {% endblock %}
{% block ngtitle %}myProfile{% endblock%}
{% block stylesheets %}{% endblock %}
{% block body %}
    {% set userFirstName = user.firstName %}
    {% set userLastName = user.lastName %}
    {% set userFullName = userFirstName~' '~userLastName%}
    {% set userUSI = user.universalStudentIdentifier %}
    {% set userDOB = user.dateOfBirth %}
    {% set userGender = user.gender %}
    {% set userImage = (user.userImage != '') ? user.userImage : 'avatar-default.svg' %}
    {% set userEmail = user.email %}
    {% set userHomePhone = user.phone %}
    {% set userWorkPhone = user.contactPhone %}
    {% set userMobPhone = user.ceophone %}
    {% set userBilAdd =  user.address.buildingname~' '~user.address.address~' '~user.address.area~' '~user.address.city~' '~user.address.suburb~' '~user.address.state~' '~user.address.country~' '~user.address.pincode %}
    {% set userPosAdd = (user.address.postal == '1') ? userBilAdd : user.address.pbuildingname~' '~user.address.paddress~' '~user.address.parea~' '~user.address.pcity~' '~user.address.psuburb~' '~user.address.pstate~' '~user.address.pcountry~' '~user.address.ppincode %}
    {% set userIdFiles = user.idfiles %}
    <main class="main-content-gqa profile">
        <div class="container"><!-- Put content here -->       <!-- Put content here --></div>
        <div class="container">            
            <div class="panel panel-default">
                <div class="profile-header">
                    <div class="avatar avatar-sm">
                        <form>
                            <input type="file" id="uploadAvatar" /><i class="zmdi zmdi-camera"></i>
                        </form>
                        <img src="{{ asset('public/ui/img/')~userImage}}" alt="{{userFullName}}">
                    </div>
                    <div class="profile-user">
                        <h2>{{userFullName}}</h2>
                        <h4>USI Number - <span>{{userUSI}}</span></h4>
                    </div>
                </div>
                <div class="panel-body">
                    <h3>Your Personal Details
                        <a class="pull-right" href="#" data-toggle="tooltip" title="Please contact your Account Manager....."><i class="zmdi zmdi-edit"></i><small>Edit</small></a>
                    </h3>
                    <div class="row">
                        <div class="col-md-5 col-sm-6 col-xs-12">
                            <div class="profile-info">
                                <i class="zmdi zmdi-calendar-note base-icon"></i>
                                <p>Date of birth<span>{{userDOB}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-phone base-icon"></i>
                                <p>Home telepehone number<span><img src="{{ asset('public/ui/img/flag_au.jpg') }}">{{userHomePhone}}</span>
                                </p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-smartphone-iphone base-icon"></i>
                                <p>Mobile number<span><img src="{{ asset('public/ui/img/flag_au.jpg') }}">{{userMobPhone}}</span></p>
                            </div>
                        </div>
                        <div class="col-md-5 col-sm-6 col-xs-12">
                            <div class="profile-info">
                                <i class="zmdi zmdi-female base-icon"></i>
                                <p>Gender<span>{{userGender}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-phone base-icon"></i>
                                <p>Work telephone number<span>{{userWorkPhone}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-email base-icon"></i>
                                <p>Email Address<a href="mailto:{{userEmail}}"><span>{{userEmail}}</span></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Your Address
                        <a class="pull-right" href="#" data-toggle="tooltip" title="Please contact your Account Manager....."><i class="zmdi zmdi-edit"></i><small>Edit</small></a>
                    </h3>
                    <div class="profile-info">
                        <i class="zmdi zmdi-pin base-icon"></i>
                        <p>Postal Address<span>{{userPosAdd}}</span></p>
                    </div>
                    <div class="profile-info">
                        <i class="zmdi zmdi-nature base-icon"></i>
                        <p>Billing Address<span>{{userBilAdd}}</span></p>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Your Account Settings</h3>
                    <div class="profile-info profile-info-password">
                        <i class="zmdi zmdi-lock base-icon"></i>
                        <p>Password
                            <span class="">&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;&#42;</span>
                            <a>
                                <i class="zmdi zmdi-edit" style=""></i>
                            </a>
                        </p>
                    </div>

                    <div class="profile-info">
                        <i class="zmdi zmdi-account-box base-icon"></i>
                        <p>ID Files Submitted
                        {% set fileSts = 0 %}
                        {% if userIdFiles is defined %}
                            {% for item in userIdFiles %}
                                {% if item.status != 1 %}
                                    {% set fileSts = 1 %}
                                    <a href = "{{ amazon_link~item.path }}"><span>{{item.type.type}}</span></a>
                                {% endif %}
                            {% endfor %}
                            {% if fileSts == 0 or userIdFiles is not defined %}<span>{{no_id_files}}</span>{% endif %}                        
                        {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="ui/js/plugins/owl.carousel.min.js"></script>
{% endblock %}
