{% extends 'revamp_base.html.twig' %}
{% block ngApp %} ng-app="gqAus" {% endblock%}
{% block ngController %} ng-controller="profileCtlr"  id="profileCtlr" {% endblock%}
{% block title %}  My Profile {% endblock %}
{% block ngtitle %}myProfile{% endblock%}
{% block stylesheets %}{% endblock %}
{% block body %}
    {% set userFirstName = user.firstName %}
    {% set userLastName = user.lastName %}
    {% set userFullName = userFirstName~' '~userLastName%}
    {% set userUSI = user.universalStudentIdentifier %}
    {% set userDOB = user.dateOfBirth %}
    {% set userGender = user.gender %}
    {% set userImage = (user.userImage != '') ? user.userImage : 'avatar-default.svg' %}
    {% set userEmail = user.email %}
    {% set userHomePhone = user.phone %}
    {% set userWorkPhone = user.contactPhone %}
    {% set userMobPhone = user.ceophone %}
    {% set userBilAdd =  user.address.buildingname~' '~user.address.address~' '~user.address.area~' '~user.address.city~' '~user.address.suburb~' '~user.address.state~' '~user.address.country~' '~user.address.pincode %}
    {% set userPosAdd = (user.address.postal == '1') ? userBilAdd : user.address.pbuildingname~' '~user.address.paddress~' '~user.address.parea~' '~user.address.pcity~' '~user.address.psuburb~' '~user.address.pstate~' '~user.address.pcountry~' '~user.address.ppincode %}
    {% set userIdFiles = user.idfiles %}
    <main class="main-content-gqa profile">
        <div class="container"><!-- Put content here -->       <!-- Put content here --></div>
        <div class="container">            
            <div class="panel panel-default">
                <div class="profile-header">
                    <div class="avatar avatar-sm">
                        <form><input type="file" id="uploadAvatar" /><i class="zmdi zmdi-camera"></i></form>
                        <img src="{{ asset('public/ui/img/')~userImage}}" alt="{{userFullName}}">
                    </div>
                    <div class="profile-user">
                        <h2>{{userFullName}}</h2>
                        <h4>USI Number - <span>{{userUSI}}</span></h4>
                    </div>
                </div>
                <div class="panel-body">
                    <h3>Your Personal Details
                        <a class="pull-right" href="#" data-toggle="tooltip" title="Please contact your Account Manager....."><i class="zmdi zmdi-edit"></i><small>Edit</small></a>
                    </h3>
                    <div class="row">
                        <div class="col-md-5 col-sm-6 col-xs-12">
                            <div class="profile-info">
                                <i class="zmdi zmdi-calendar-note base-icon"></i>
                                <p>Date of birth<span>{{userDOB}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-phone base-icon"></i>
                                <p>Home telepehone number<span><img src="{{ asset('public/ui/img/flag_au.jpg') }}">{{userHomePhone}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-smartphone-iphone base-icon"></i>
                                <p>Mobile number<span><img src="{{ asset('public/ui/img/flag_au.jpg') }}">{{userMobPhone}}</span></p>
                            </div>
                        </div>
                        <div class="col-md-5 col-sm-6 col-xs-12">
                            <div class="profile-info">
                                <i class="zmdi zmdi-female base-icon"></i>
                                <p>Gender<span>{{userGender}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-phone base-icon"></i>
                                <p>Work telephone number<span>{{userWorkPhone}}</span></p>
                            </div>
                            <div class="profile-info">
                                <i class="zmdi zmdi-email base-icon"></i>
                                <p>Email Address<a href="mailto:{{userEmail}}"><span>{{userEmail}}</span></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Your Address
                        <a class="pull-right" href="#" data-toggle="tooltip" title="Please contact your Account Manager....."><i class="zmdi zmdi-edit"></i><small>Edit</small></a>
                    </h3>
                    <div class="profile-info">
                        <i class="zmdi zmdi-pin base-icon"></i>
                        <p>Postal Address<span>{{userPosAdd}}</span></p>
                    </div>
                    <div class="profile-info">
                        <i class="zmdi zmdi-nature base-icon"></i>
                        <p>Billing Address<span>{{userBilAdd}}</span></p>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Your Account Settings</h3>
                    <div class="profile-info profile-info-password"><i class="zmdi zmdi-lock base-icon"></i>
                        <p>Password <br />
                            <span>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                                <i class="zmdi zmdi-circle"></i>
                            </span>
                            <button class="btn btn-link btn-sm" data-toggle="modal" data-target="#editPassword"><i class="zmdi zmdi-edit"></i>Edit</button>
                        </p>
                    </div>

                    <div class="profile-info">
                        <i class="zmdi zmdi-account-box base-icon"></i>
                        <p>ID Files Submitted
                            {% set fileSts = 0 %}
                            {% if userIdFiles is defined %}
                                {% for item in userIdFiles %}
                                    {% if item.status != 1 %}
                                        {% set fileSts = 1 %}
                                        <a data-toggle="modal" data-target="#fileViewer{{item.id}}" href = "{{ amazon_link~item.path }}"><span>{{item.type.type}}</span></a>
                                    {% endif %}
                                {% endfor %}
                                {% if fileSts == 0 or userIdFiles is not defined %}<span>{{no_id_files}}</span>{% endif %}                        
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Change password -->
    <div class="modal fade" id="editPassword" >
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="zmdi zmdi-hc-lg zmdi-close"></i></button>
                    <h4 class="modal-title">Change Your Password</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="control-label">Old Password</label>
                            <span class="form-password-mask">
                                <input type="password" class="form-control" id="oldPassword" data-element="password">
                                <button type="button" class="btn btn-mask-password" data-target="password"><i class="zmdi zmdi-eye"></i></button>
                            </span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">New Password</label>
                            <span class="form-password-mask">
                                <input type="password" class="form-control" id="password" data-element="password">
                                <button type="button" class="btn btn-mask-password" data-target="password"><i class="zmdi zmdi-eye"></i></button>
                            </span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Confirm New Password</label>
                            <span class="form-password-mask">
                                <input type="password" class="form-control" id="confirmPassword" data-element="password">
                                <button type="button" class="btn btn-mask-password" data-target="password"><i class="zmdi zmdi-eye"></i></button>
                            </span>
                        </div>
                        <div class="alert alert-danger hidden" id="errorMessage">
                            <i class="zmdi zmdi-alert-circle-o zmdi-hc-lg zmdi-hc-fw"></i> <span></span>
                        </div>
                        <button type="button" disabled class="btn btn-success text-uppercase btn-block" id="submitPassword">Change my Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Change Password -->
     {% if userIdFiles is defined %}
        {% for item in userIdFiles %}
            <!-- File Preview -->
            <div class="modal fade" id="fileViewer{{item.id}}">
                <div class="modal-dialog modal-md">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="zmdi zmdi-hc-lg zmdi-close"></i></button>
                            <h4 class="modal-title">{{item.name}}</h4>
                        </div>
                        <div class="modal-body modal-body-lg"> 
                            <img src="{{ amazon_link~item.path }}" style="width: 100%;" alt="{{item.name}}" title="{{item.name}}">
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of File Preview -->
        {%endfor%}
    {%endif%}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/ui/js/plugins/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('public/ui/js/set-changepassword.js') }}"></script>
    <script src="{{ asset('public/ui/js/profile.js') }}"></script>
{% endblock %}
