<div class="wid90p">
    <div class="row">
        <div class="col-xs-12">
            <div class="gq-evidence-new">
                <form method="post" id="frmSelectEvidence" action="{{ app.request.baseUrl }}/saveExistingEvidence" name="frmSelectEvidence" enctype= "multipart/form-data" onsubmit="return validateExisting()">
                    <input type="hidden" name="select_hid_unit" id="select_hid_unit" value="">
                    <input type="hidden" name="select_hid_course" id="select_hid_course" value="">
                    <!-- Tabs start here -->
                    <ul class="nav nav-pills margin-top15 gq-evidence-tabs-new" role="tablist" id="myTab">
                        <li role="presentation" class="active" ><a href="#images" aria-controls="images" role="tab" data-toggle="tab">Images</a></li>
                        <li role="presentation" ><a href="#audios" aria-controls="address" role="tab" data-toggle="tab">Audios</a></li>
                        <li role="presentation"><a href="#videos" aria-controls="videos" role="tab" data-toggle="tab">Videos</a></li>
                        <li role="presentation"><a href="#notes" aria-controls="notes" role="tab" data-toggle="tab">Notes</a></li>
                        <li role="presentation"><a href="#files" aria-controls="files" role="tab" data-toggle="tab">Documents</a></li>
                    </ul>
                    <!-- Tabs end start here -->

                    <!-- Content for respective tabs above will be in this section -->
                    <div class="tab-content  margin-top15">
                        <div aria-labelledby="existing-evidence-tab" id="images" class="tab-pane fade active in" role="tabpanel">
                            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                                <div class="row">
                                {% set flag_image = 0 %}
                                {% if evidences %}
                                {% for evidence in evidences %}
                                {% if evidence.type == 'image' %}
                                {% set flag_image = 1 %}
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                        <div class="gq-dashboard-courses-detail  margin-top15" >
                                            <a href = "{{ amazon_link }}{{  evidence.path }}" class="fancybox">                                        
                                                <div class="gq-id-files-content-icon-wrap gq-id-files-content-img-icon"></div>
                                            </a>
                                            <div class="gq-id-files-content-row-wrap">
                                                <div class="gq-id-files-content-row">
                                                    <label>Title</label><span title="{{evidence.name}}">{{evidence.name|slice(0, 20)}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Size</label><span>{{evidence.size}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                                                </div>
                                            </div>
                                            <span class="select-from-evidence-tab-check">
                                                <input class="check_evidence styled" type="checkbox" value="{{evidence.id}}" name="evidence-file[{{evidence.type}}][]">
                                            </span>
                                        </div>
                                    </div>
                            {% endif %}
                         {% endfor %}
                         {% endif %}
                            {% if flag_image == 0 %}
                                    <div class="gq-tabs-no-content-text">Images not found</div>
                            {% endif %}
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane" id="audios">
                            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                                <div class="row">
                    {% set flag_audio = 0 %}
                    {% if evidences %}
                   {% for evidence in evidences %}
                        {% if evidence.type == 'audio' %}
                        {% set flag_audio = 1 %}
                        {% set types = ['mp3','wma'] %}
                        {% set result = evidence.name|split('.') %}
                        {# % if result.1 | lower in types % #}
                            {% set audio = amazon_link~evidence.path %}
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                        <div class="gq-dashboard-courses-detail  margin-top15">
                                            <a href = "{{ amazon_link }}{{  evidence.path }}" target="_blank">
                                                <div class="gq-id-files-content-icon-wrap gq-id-files-content-audio-icon"></div>
                                            </a>
                                            <div class="gq-id-files-content-row-wrap">
                                                <div class="gq-id-files-content-row">
                                                    <label>Title</label><span title="{{evidence.name}}">{{evidence.name|slice(0, 20)}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Size</label><span>{{evidence.size}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                                                </div>
                                            </div>
                                            <span class="select-from-evidence-tab-check">
                                                <input class="check_evidence styled" type="checkbox" value="{{evidence.id}}" name="evidence-file[{{evidence.type}}][]">
                                            </span>
                                        </div>
                                    </div>
                        {# % endif % #}
                    {% endif %}
                 {% endfor %}
                 {% endif %}

                    {% if flag_audio == 0 %}
                                    <div class="gq-tabs-no-content-text">Audios not found</div>
                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="videos">
                            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                                <div class="row">
                    {% set flag_video = 0 %}
                    {% if evidences %}
                   {% for evidence in evidences %}
                        {% if evidence.type == 'video' %}
                        {% set flag_video = 1 %}
                        {% set types = ['mp4', 'mov'] %}
                        {% set result = evidence.name|split('.') %}
                        {# % if result.1 | lower in types % #}
                            {% set videofile = amazon_link~evidence.path %}
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                        <div class="gq-dashboard-courses-detail  margin-top15" >
                                            <a href = "{{ amazon_link }}{{  evidence.path }}" target="_blank">
                                                <div class="gq-id-files-content-icon-wrap gq-id-files-content-video-icon"></div>
                                            </a>
                                            <div class="gq-id-files-content-row-wrap">
                                                <div class="gq-id-files-content-row">
                                                    <label>Title</label><span title="{{evidence.name}}">{{evidence.name|slice(0, 20)}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Size</label><span>{{evidence.size}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                                                </div>
                                            </div>
                                            <span class="select-from-evidence-tab-check">
                                                <input class="check_evidence styled" type="checkbox" value="{{evidence.id}}" name="evidence-file[{{evidence.type}}][]">
                                            </span>
                                        </div>
                                    </div>
                    {# % endif % #}
                    {% endif %}
                 {% endfor %}
                 {% endif %}

                    {% if flag_video == 0 %}
                                    <div class="gq-tabs-no-content-text" >Videos not found</div>
                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="notes">
                            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                                <div class="row">
                {% set flag_text = 0 %}
                {% if evidences %}
                   {% for evidence in evidences %}
                        {% if evidence.type == 'text' %}
                            {% set flag_text = 1 %}
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                        <div class="gq-dashboard-courses-detail  margin-top15">
                                            <div class="gq-id-files-content-row-wrap">
                                                <div class="gq-id-files-content-row">
                                                    <label>Content</label><span title="{{evidence.content}}">{{evidence.content|slice(0, 20)}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                                                </div>
                                            </div>
                                            <span class="select-from-evidence-tab-check">
                                                <input class="check_evidence styled" type="checkbox" value="{{evidence.id}}" name="evidence-file[{{evidence.type}}][]">
                                            </span>
                                        </div>
                                    </div>
                    {% endif %}
                 {% endfor %}
                 {% endif %}
                    {% if flag_text == 0 %}
                                    <div class="gq-tabs-no-content-text" >Notes not found</div>
                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane" id="files">
                            <div class="gq-dashboard-courses-detail-wrap gq-dashboard-qualification-scroll">
                                <div class="row">
                    {% set flag_files = 0 %}
                    {% if evidences %}
                   {% for evidence in evidences %}
                        {% if evidence.type == 'file' %}
                        {% set flag_files = 1 %}
                        {% set types = ['txt', 'doc', 'xls', 'docx'] %}
                        {% set result = evidence.name|split('.') %}
                        {# % if result.1 | lower in types % #}
                            {% set file = amazon_link~evidence.path %}
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                                        <div class="gq-dashboard-courses-detail  margin-top15">
                                            <a href = "{{ amazon_link }}{{  evidence.path }}" {% if (result.1 == 'xls') or (result.1 == 'docx') or (result.1 == 'doc') %} {% else %} class="fancybox fancybox.iframe" {% endif %} >
                                                <div class="gq-id-files-content-icon-wrap gq-id-files-content-doc-icon"></div>
                                            </a>
                                            <div class="gq-id-files-content-row-wrap">
                                                <div class="gq-id-files-content-row">
                                                    <label>Title</label><span title="{{evidence.name}}">{{evidence.name|slice(0, 20)}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Size</label><span>{{evidence.size}}</span>
                                                </div>
                                                <div class="gq-id-files-content-row">
                                                    <label>Added on</label><span>{{evidence.created|date("d/m/Y") }}</span>
                                                </div>
                                            </div>
                                            <span class="select-from-evidence-tab-check">
                                                <input class="check_evidence styled" type="checkbox" value="{{evidence.id}}" name="evidence-file[{{evidence.type}}][]">
                                            </span>
                                        </div>
                                    </div>
                    {# % endif % #}
                    {% endif %}
                 {% endfor %}
                 {% endif %}
                    {% if flag_files == 0 %}
                                    <div class="gq-tabs-no-content-text">Documents not found</div>
                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="gq-course-details-upload-button-wrap">
                                <input type="submit" class="btn btn-red pull-right" value="save">
                                <span class="loading-icon pull-right uploadevidence_loader" style="display:none;"><img src="{{ asset('public/images/loading.gif') }}" /></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>