{% set userName = (userName is defined)? userName : user.firstName~' '~user.lastName %}
{% set courseCode = (courseInfo.id is defined) ? courseInfo.id : courseCode %}
{% set applicantId = (userId is defined) ? userId : userId %}
<header {% if app.request.attributes.get('_route') != 'applicantDetails' and app.request.attributes.get('_route') != 'courseunitDetails' %}class="header-border"{%endif%}>
    <section class="container">
        <div class="info-header">
            <div class="portfolio">
                <strong class="title">{{userName}}</strong>
                <i id="closeDivTag" class="material-icons clear closeDivTag">clear</i>
            </div>
            <div class="unit-info hide">
                <a href="#"><i class="material-icons btn-back">arrow_back</i></a>
                <strong class="title">Unit info</strong>
            </div>            
        </div>
        <nav>
            <ul class="nav">
                <li><a {% if app.request.attributes.get('_route') == 'applicantDetails' or app.request.attributes.get('_route') == 'courseunitDetails' %} class="active" {% endif %} href="{{ app.request.baseUrl }}/applicantDetails/{{courseCode}}/{{applicantId}}"><i class="material-icons">school</i><span>Qualification</span></a></li>
                <li><a {% if app.request.attributes.get('_route') == 'files'%} class="active" {% endif %} href="{{ app.request.baseUrl }}/files/{{courseCode}}/{{applicantId}}"><i class="material-icons">cloud_upload</i><span>Files</span></a></li>
                <li><a {% if app.request.attributes.get('_route') == 'candidateProfile'%} class="active" {% endif %} href="{{ app.request.baseUrl }}/candidateProfile/{{courseCode}}/{{applicantId}}"><i class="material-icons">account_circle</i><span>Profile</span></a>
            </li>
            <li class="profile">
                <a href="#"><img class="profile-img" src="{{ asset('public/images/PROFILE.png')}}" alt="profile" /><i class="material-icons">expand_more</i></a>
                <ul class="hide">
                    <li><a data-toggle="modal" data-target="#profile2" href="javascript:void(0)">PROFILE</a></li>
                    <li><a href="/logout">Log out</a></li>
                </ul>
            </li>
        </ul>          
        </nav>
    </section>
</header>