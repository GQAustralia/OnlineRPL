{% extends 'base.html.twig' %}
{% block title %}GQ - RPL Applicant Lists{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('public/css/timepicker.css') }}" />
    <link rel="stylesheet" href="{{ asset('public/css/pages/all/portfolio.css') }}">    
    <link rel="stylesheet" href="{{ asset('public/css/pages/all/rto.css') }}">
{% endblock %}
{% block body %}

{% set userRole = app.security.getToken().getUser().getRoles() %}
 <!-- Larg Screens HTML Start -->
        
        <section class="portfolio-container hidden-xs">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel-group">
                            <div class="panel">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title">
                                        <span>Portfolios </span><span class="count" > {% if pendingApplicantsCount > 0 %}({{pendingApplicantsCount}}){% endif %} </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container">
                            <div class="portfolio-filter">
                                <div class="row">
                                    <div class="col-md-8 col-lg-8">
                                       <!-- <form action="#" class="filter"> -->
                                            <input type="text" value="" name="searchName" id="searchName" class="search-box" placeholder="Search Applicant Name"/>
                                       <!-- </form>-->
                                    </div>
                                    <div class="col-md-2 col-lg-2" {% if ('ROLE_RTO' in userRole) %} style="display:none;" {% endif %}>
                                        <div class="status active">
                                            <a href="#"><span>Current</span></a>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-lg-2" {% if ('ROLE_RTO' in userRole) %} style="display:none;" {% endif %}>
                                        <div class="status in-active">
                                            <a href="#"><span>Completed</span></a>
                                        </div>                                    
                                    </div>
                                </div>                            
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div id="ajaxHtml" style="display:none" {% if ('ROLE_RTO' in userRole) %} tdcolspan="2" {% elseif (('ROLE_MANAGER' in userRole) or ('ROLE_SUPERADMIN' in userRole)) %} tdcolspan="4" tdrtocolspan="4" {% else %} tdcolspan="6" tdrtocolspan="3" {% endif %}>
                                    <img src="{{ asset('public/images')}}/loading.gif" />
                        </div>
                        <div class="container">
                            <div class="portfolio-data-table">                                
                                <table class="table">
                                  {% include 'GqAusUserBundle:Applicant:applicantsFilters.html.twig' %}
                                    <tbody id="currentList">
                                        {% include 'GqAusUserBundle:Applicant:applicants.html.twig' %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>            
            </div>
        </section>
        
        <!-- Larg Screens HTML End -->
        <!-- Small Screens HTML Start -->
        
        <section class="portfolio-container hidden-sm hidden-md hidden-lg">
            <div class="container-fluid">
                <div class="row no-gutter">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="panel-group">
                            <div class="panel">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title">
                                        <span>Portfolios </span><span class="count"  {% if ('ROLE_RTO' in userRole) %} style="display:none;" {% endif %}> (197) </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="portfolio-filter">
                            <div class="row no-gutter">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="status active"  {% if ('ROLE_RTO' in userRole) %} style="display:none;" {% endif %}>
                                        <a href="#"><span>Current</span></a>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6"  {% if ('ROLE_RTO' in userRole) %} style="display:none;" {% endif %}>
                                    <div class="status in-active">
                                        <a href="#"><span>Completed</span></a>
                                    </div>                                    
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12">
                                    <form action="#" class="filter">
                                        <input type="text" value="" class="search-box" placeholder="Search"/>
                                    </form>
                                </div>
                                <!-- Need clarification on Sort functionality once get the clarification un-comment below code and change the above grid to col-xs-*, col-sm-*, col-md-* to 8 -->
                                <!--div class="col-xs-4 col-sm-4 col-md-4">
                                    <div>Sort</div>
                                </div-->
                            </div>                            
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="portfolio-data-table mobile-portfolio-data-table">
                            <table class="table">
                               {% include 'GqAusUserBundle:Applicant:applicantsFilters.html.twig' %}
                                <tbody>
                                     {% include 'GqAusUserBundle:Applicant:applicants.html.twig' %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>            
            </div>
        </section>
        
        <!-- Small Screens HTML Start -->
        
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/daterangepicker.js') }}"></script>    
    <script src="{{ asset('public/js/timepicker.js') }}"></script>   
    <script type="text/javascript">
        $(document).ready(function() {
            var dateTime = new Date();
            var utc = dateTime.getTime() + (dateTime.getTimezoneOffset() * 60000);
            var timeZoneDT = new Date(utc + (3600000 * +10));
            $(".datepic").datetimepicker({
                dateFormat: "dd/mm/yy",
                timeFormat: "hh:mm tt",
                minDate: timeZoneDT,
                minDateTime: timeZoneDT
            });
        });
    </script>
{% endblock %}