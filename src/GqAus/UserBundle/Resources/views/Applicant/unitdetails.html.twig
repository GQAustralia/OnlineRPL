{% extends 'base.html.twig' %}
{% block title %}Recognition of Prior Learning{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('public/css//bootstrap-datetimepicker.css')}}">
    <link rel="stylesheet" href="{{ asset('public/css/jquery.fancybox.css?v=2.1.5') }}" media="screen" />
    <link rel="stylesheet" href="{{ asset('public/css/pages/all/qualification.css') }}">
{% endblock %}
{% block navmenu %}
    {% include 'GqAusUserBundle:Applicant/includes:navmenu.html.twig' %}
{% endblock %}    
{% block body %}
    {% set userRole = app.security.getToken().getUser().getRoles() %}
    {% set actUnitStatus = unitStatus.issubmitted %}
    {% set unitFacStatus = unitStatus.facilitatorstatus %}
    {% set unitAssStatus = unitStatus.assessorstatus %}
    {% set unitRtostatus = unitStatus.rtostatus %}
    <!-- Large Screens HTML -->
    <div class="hidden-xs body_section">
        <div class="presentation-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-11">
                        <p>
                            <span>{% if courseDetails.courseName is defined %}{{courseDetails.courseName}}{% endif %}</span>
                            <span>{% if courseCode is defined %}{{courseCode}}{% endif %}</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="status-message" id="status-message" style="display:none;"></div>
        <div class="container">    
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="edu-tag">
                        {% set currUnitStatus = courses_service.getUnitStatus(userId, unitCode, courseCode)%}
                        {% set approvalText = user_service.getStausByStatus(currUnitStatus, userId, unitCode, courseCode, userRole[0]) %}
                        {% if approvalText|length > 0 and approvalText != '0' %}<p> <span class="tag status in-progress">{{approvalText}} </span> </p>{%else%}{%if currUnitStatus.issubmitted is defined%}{%if currUnitStatus.issubmitted == '1'%}<p> <span class="tag status done">Submitted</span> </p>{%endif%}{%endif%}{% endif %}
                        <p>
                            <span class="tag-edu"><a href="{{ base_url }}applicantDetails/{% if courseCode is defined %}{{courseCode}}{% endif %}/{% if userId %}{{userId}}{%endif%}">Qualification</a></span>
                            <span class="tag-id">Unit {{ unitCode }}</span>
                            <span class="tag-copy">{{unitName|raw}}</span>                        
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-4">
                    <div class="panel-group">
                        <div class="panel clearfix">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <span>Evidence</span>
                                    <span class="pull-right"><strong> {{ evidenceCount }} Evidence Files Received</strong></span>
                                </h4>
                            </div>
                            <div class="panel-body">
                                <div class="panel-copy">
                                    {%set inc = 0 %}
                                    {% for evidence in evidences %}
                                        {%set inc = inc+1 %}
                                        {% if evidence.unit == unitCode %}
                                            {% set eviType = evidence_service.getEvidenceShowType(evidence.type) %}
                                            {% set output = eviType|split('&&') %}
                                                <div class="file-info">
                                                    <span data-evidenceid="{{ evidence.id }}" class="icon {% if 'ROLE_FACILITATOR' in userRole %}fac_view_evidence {% endif %}"><a {% if evidence.type != 'text' %} href="{% if evidence.type == 'recording' %}{{ amazon_link~tokbox_key }}/{{ evidence.path }}/archive.mp4{%else%}{{amazon_link~'user-'~userId~'/'~evidence.path}}{%endif%}" 
                                                    {% if output[1] is defined %}
                                                            {% if output[1] == 'fancybox' or output[1] == 'fancybox fancybox.iframe' %} class="{{output[1]}}" {% else %}target="_blank"{% endif %}
                                                    {%endif%}{%else%}href="#{{evidence.unit}}{{inc}}" class="fancybox" id="btnForm"{%endif%}>
                                                    <i class="material-icons">{% if output[0] is defined %}{{output[0]}}{%endif%}</i></a></span>
                                                    <span class="file-discription">
                                                            {% if evidence.type == 'recording' %}{% if evidence.path is defined %}{{evidence.path|slice(0, 20)}}{%endif%}{%else%}{% if evidence.name is defined %}{{evidence.name}}{%endif%}{% if evidence.content is defined %}{{evidence.content|slice(0,20)}}{%endif%}{%endif%}
                                                       <br/>{% if evidence.size is defined %}{{evidence.size}} {% if evidence.type != 'recording' and evidence.type != 'text'%} |{%endif%} {%endif%} {%if evidence.created is defined%}ADDED {{evidence.created|date("d/m/y")}}{%endif%}
                                                   </span>   
                                                </div>
                                        {% endif %}
                                    <div id="{{evidence.unit}}{{inc}}" style="display:none;width:400px;height:auto;overflow:auto;">{% if evidence.content is defined %}{{evidence.content}}{%endif%}</div>
                                    {% endfor %}
                                </div>
                                <div class="gqa-btn-group border-dark no-margin">
                                    <div class="row no-gutter">
                                        <div class="col-md-12 col-lg-12">
                                            <div class="btn">
                                                <div class="dropdown keep-open">
                                                    <span class="dropdown-toggle" data-toggle="dropdown"><a href="javascript:void(0)"><i class="material-icons">playlist_add</i>ToDo list</a></span>
                                                    <div class="arrow" style="left: 50%;"></div>
                                                    <div class="dropdown-menu">
                                                        <div class="data_section">
                                                            <textarea rows="3" placeholder="Notes" id="todolist-msg" name="todolist-msg"></textarea>
                                                            <div class="date_section clearfix"><input type="text" readonly="true" id="remindDate"  class="date_field form-control"/></div>
                                                        </div>
                                                        <button type="button" class="btn_red setToDoList"  listid="{% if coursePrimaryId >0 %}{{coursePrimaryId}}{% endif %}" {% if coursePrimaryId >0 %} usercourseid="{{coursePrimaryId}}" remindertypeid="{{coursePrimaryId}}" {% endif %} remindertype="portfolio">SET</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
					<div class="row">
						<div class="col-md-12 col-lg-12">
							<div class="panel-group">
								<div class="panel clearfix">
									<div class="panel-heading clearfix"><h4 class="panel-title"><span>Self Assessment Notes</span></h4></div>
									<div class="panel-body"><span class="if-no-assessment">{% if selfAssessmentText|length > 0 %}{{selfAssessmentText.0.content}}{%else%}Not yet received for this Unit {% endif %}</span></div>
								</div>                                        
							</div>
						</div>
					</div>
                    <div class="gqa-btn-group">
						<div class="row no-gutter">
							{% if ('ROLE_FACILITATOR' in userRole or 'ROLE_MANAGER' in userRole) and actUnitStatus =='1' %}
								{% if unitFacStatus == '0' or unitFacStatus == '2' %}
							<div class="col-md-6 col-lg-6"><button type="button" class="btn btn-danger border-right" data-toggle="modal" data-target="#satisfactory">Satisfactory</button></div>
								{#% if unitFacStatus == '0' %#}
							<div class="col-md-6 col-lg-6"><button type="button" class="btn btn-danger border-right" data-toggle="modal" data-target="#not-satisfactory">Not yet Satisfactory</button></div>
									{#% endif %#}
								{% endif %}
							{% endif %}
							{% if ('ROLE_ASSESSOR' in userRole and actUnitStatus =='1') %}
								{% if (unitAssStatus == '0' or unitAssStatus == '2') and unitFacStatus == '1' %}
							<div class="col-md-6 col-lg-6"><button class="btn btn-danger border-right" data-toggle="modal" data-target="#satisfactory" type="button">Competent</button></div>
									{#% if unitAssStatus == '0' %#}
							<div class="col-md-6 col-lg-6"><button class="btn btn-danger" type="button" data-toggle="modal" data-target="#not-satisfactory">Not yet Competent</button></div>
									{#% endif %#}
								{% endif %}
							{% endif %}
							{% if ('ROLE_RTO' in userRole and actUnitStatus =='1') %}
								{% if (unitRtostatus == '0' or unitRtostatus == '2') and unitAssStatus == '1' %}
							<div class="col-md-6 col-lg-6"><button class="btn btn-danger border-right" data-toggle="modal" data-target="#satisfactory" type="button">Competent</button></div>
							{#% if unitRtostatus == '0' %#}
							<div class="col-md-6 col-lg-6"><button class="btn btn-danger" type="button" data-toggle="modal" data-target="#not-satisfactory">Not yet Competent</button></div>
							{#% endif %#}
								{% endif %}
							{% endif %}
						</div>
					</div>
				</div>
                <div class="col-md-6 col-lg-7">
                    <div class="accordion panel-group" id="accordion1">
                        <div class="panel panel-default">
                            <div class="panel-heading clearfix">
                                <h4 class="panel-title"><span>About this unit</span></h4>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse in">
                                <div class="panel-body">
                                    <div class="accordion panel-group" id="nested">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <div class="panel-title">
                                                    <div class="panle_body_content">
                                                        <p><strong>Elements and Performanace Criteria</strong></p>
                                                    </div>
    <a href="#nested-collapseSeven" data-status="true"  data-collapse="child" data-parent="#nested,#nested-collapseEight,#nested-collapseNine" data-toggle="collapse" aria-expanded="false" class="collapsed">
                                                        <i class="material-icons">expand_less</i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="panel-collapse collapse in" id="nested-collapseSeven" style="" aria-expanded="true">
                                                <div class="panel-body">
                                                    <div class="panel-copy">
                                                        <div class="unit-element-details">{%if elements|length > 0%}{{elements|raw}}{% endif %}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <div class="panel-title">
                                                    <div class="panle_body_content">
                                                        <p><strong>Required Skills &amp; Knowledge</strong></p>
                                                    </div>
                                                    <a href="#nested-collapseEight" data-collapse="child" data-parent="#nested,#nested-collapseEight,#nested-collapseNine" data-toggle="collapse">
                                                        <i class="material-icons">expand_more</i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="panel-collapse collapse" id="nested-collapseEight">
                                                <div class="panel-body">
                                                    <div class="panel-copy">
                                                        <div class="unit-element-details">{%if skillsKnowledge|length > 0%}{{skillsKnowledge|raw}}{% endif %}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <div class="panel-title">
                                                    <div class="panle_body_content">
                                                        <p><strong>Evidence Guide &amp; Range Statement</strong></p>
                                                    </div>
                                                    <a href="#nested-collapseNine" data-collapse="child" data-parent="#nested,#nested-collapseEight,#nested-collapseNine" data-toggle="collapse">
                                                        <i class="material-icons">expand_more</i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="panel-collapse collapse" id="nested-collapseNine">
                                                <div class="panel-body">
                                                    <div class="panel-copy">
                                                        <div class="unit-element-details">{%if evidenceGuide|length > 0%}{{evidenceGuide|raw}}{% endif %}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-pop">
        <div role="dialog" id="satisfactory" class="modal fade" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content satisfactory-modal-content">
                    <div class="modal-body"><p><strong>Done!</strong><br>This unit is  {% if ('ROLE_FACILITATOR' in userRole or 'ROLE_MANAGER' in userRole) %}SATISFACTORY{% elseif('ROLE_ASSESSOR' in userRole)%}COMPETENT{% elseif('ROLE_RTO' in userRole)%}COMPETENT{% endif %}.<br/>Do you want to send {{userName}} a message about this?</p></div>
                    <div class="modal-footer">
                        <div class="form-group form-group-lg gqa-btn-group" id="applicantEStatus" userRole="{{userRole.0}}">
                            <div class="form">
                                <div class="row no-gutter">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <button id="approveyes" data-target="#myModal" data-toggle="modal" class="btn btn-danger border-right" type="button">Yes</button>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <button id="approveno" data-target="#myModal" data-toggle="modal" class="btn btn-danger" type="button">No</button>
                                    </div>
                                    <input type="hidden" id="course-name" name="course-name" value="{% if courseDetails.courseName is defined %}{{courseDetails.courseName}}{% endif %}">
                                    <input type="hidden" id="course-code" name="course-code" value="{{courseCode}}">
                                    <input type="hidden" id="userid" name="userid" value="{{userId}}">
                                    <input type="hidden" id="unit-name" name="unit-name" value="{{unitName}}">
                                    <input type="hidden" id="unit-code" name="unit-code" value="{{unitCode}}">
                                    <input type="hidden" id="unit-id" name="unit-id" value="{{unitStatus.id}}"> 
                                </div>
                            </div>
                        </div>          
                    </div>
                </div>
            </div>
        </div>
        <div role="dialog" id="not-satisfactory" class="modal fade" style="display: none;">
            <div class="modal-dialog"><!-- Modal content-->
               <div class="modal-content not-satisfactory-modal-content">
                    <div class="modal-body"><p><strong>Add a Message</strong><br>Please let {{userName}} know why this unit is <br>{% if ('ROLE_FACILITATOR' in userRole) %}NOT YET SATISFACTORY{% elseif('ROLE_ASSESSOR' in userRole)%}NOT YET COMPETENT{% elseif('ROLE_ASSESSOR' in userRole)%}NOT YET COMPETENT{% endif %}</p>
                        <p><textarea name="msg-body" id="msg-body" cols="30" rows="4"></textarea></p>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group form-group-lg gqa-btn-group">
                            <form class="form" action="#">
                                <div class="row no-gutter">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <button id="disapproveno" data-target="#myModal" data-toggle="modal" class="btn btn-danger border-right" type="button">Cancel</button>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <button id="disapproveyes" data-target="#myModal" data-toggle="modal" class="btn btn-danger" type="button">Send</button>
                                    </div>
                                     <input type="hidden" id="course-name" name="course-name" value="{% if courseDetails.courseName is defined %}{{courseDetails.courseName}}{% endif %}">
                                    <input type="hidden" id="course-code" name="course-code" value="{{courseCode}}">
                                    <input type="hidden" id="userid" name="userid" value="{{userId}}">
                                    <input type="hidden" id="unit-name" name="unit-name" value="{{unitName}}">
                                    <input type="hidden" id="unit-code" name="unit-code" value="{{unitCode}}">
                                    <input type="hidden" id="unit-id" name="unit-id" value="{{unitStatus.id}}"> 
                                    <input type="hidden" id="fromuser-id" name="fromuser-id" value="{{facilitatorId}}">
                                </div>
                            </form>
                        </div>          
                   </div>
               </div>
            </div>
        </div>
    </div>
    <!-- Larg Screens HTML -->
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('public/js/custom-jquery-ajax.js') }}"></script>
    <script type="text/javascript" src="{{ asset('public/js/jquery.fancybox.js?v=2.1.5') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.fancybox').fancybox();
		    $("#btnForm").fancybox();
        });
    </script>
{% endblock %}
    