<thead>
    <tr>
        <th {% if (('ROLE_MANAGER' in userRole) or ('ROLE_SUPERADMIN' in userRole)) %} {% else %}class="sort" data-sort="firstName" {% endif %}><span class="">NAME</span></th>
        <th {% if ('ROLE_RTO' in userRole) %}  {% elseif (('ROLE_MANAGER' in userRole) or ('ROLE_SUPERADMIN' in userRole)) %} {% else %}} class="sort" data-sort="qualification"  {% endif %}  ><span class="">QUALIFICATION</span></th>
        
       
        {% if ('ROLE_FACILITATOR' in userRole) or ('ROLE_ASSESSOR' in userRole) %}
        <th  class="sort" data-sort="evidence" ><span class="">Evidence</span></th>        
         {% endif %}
        {% if ('ROLE_FACILITATOR' in userRole) or ('ROLE_ASSESSOR' in userRole)  or ('ROLE_RTO' in userRole)%}
        <th class="sort asc" data-sort="daysleft"><span class="">DAYS LEFT</span></th>
        {% endif %}
        {% if ('ROLE_RTO' not in userRole) %}
            <th {% if (('ROLE_MANAGER' in userRole) or ('ROLE_SUPERADMIN' in userRole)) %} 
                    ><select name="filterByStatus" id="filterByStatus" class="form-control">
                        <option value="">QUAL STATUS</option>
                        {% for key, status in qualificationStatus %}
                            <option value="{{key}}">{{status["status"]}}</option>
                        {% endfor %}
                    </select>
                {% else %} 
                    class="sort" data-sort="status"> <span class=""> Status </span>
                {% endif %} </th>        
        {% endif %}
        {% if ('ROLE_FACILITATOR' in userRole) or ('ROLE_ASSESSOR' in userRole) %}
        <th><span class="">To Do</span></th>
        {% endif %}
        {% if ('ROLE_MANAGER' in userRole)%}
            <th><select name="filterByFacilitator" id="filterByFacilitator" class="form-control">
                    <option value="">ACCOUNT MANAGER</option>
                    {% for key, user in users %}
                        {% if user.roletype == 2 %}
                            <option value="{{user.id}}"> {{user.username}}</option>
                        {%endif%}
                    {% endfor %}
                </select>
            </th>
            <th><select name="filterByAssessor" id="filterByAssessor" class="form-control">
                    <option value="">ASSESSOR</option>
                    {% for key, user in users %}
                        {% if user.roletype == 3 %}
                            <option value="{{user.id}}"> {{user.username}}</option>
                        {%endif%}
                    {% endfor %}
                </select>
            </th>
            <th><select name="filterByRto" id="filterByRto" class="form-control">
                    <option value="">RTO</option>
                    {% for key, user in users %}
                        {% if user.roletype == 4 %}
                            <option value="{{user.id}}"> {{user.username}}</option>
                        {%endif%}
                    {% endfor %}
                </select>
            </th>
        {% endif %}
    </tr>
</thead>